{% if settings.sidebar_products_recently_enable %}
	
	{% assign collection_product_sidebar = collections[settings.sidebar_products_collection].products %}
	{% assign product_sidebar_limit = settings.sidebar_products_recently_number %}
	<div id="products_viewed_block{{ sidebar-recentlyviewed }}" class="block products_block nopadding">
		{% if settings.sidebar_products_recently_title != blank %}
			<h4 class="title_block">
				<a href="{{ collection_product_sidebar.url }}" title="{{ settings.sidebar_products_recently_title }}">{{ settings.sidebar_products_recently_title }}</a>
			</h4>
		{% endif %}
		<div class="block_content products-block">
			<ul class="products products-block">
				{% for product in collection_product_sidebar limit:product_sidebar_limit %}
					<li class="media clearfix">
						{% include 'product-sidebar-item' with '' %}
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
{% endif %}