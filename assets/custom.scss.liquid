/* sidebar menu */

.verticalmenu .dropdown-menu{
  padding: 10px 25px;
}

.parent.dropdown:first-child{
  .col-sm-4:nth-child(4){
    clear: both;
  }
}
.parent.dropdown:nth-child(2){
  .row > div:nth-child(4) {
    clear: both;
  }
}
