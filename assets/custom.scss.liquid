/* ============================================
  HEADER 
============================================ */

.template-index #header-main .vertical-icon > div {
  display: block ;
  @media screen and (max-width: 1200px){
    display: block;
  }
  @media screen and (max-width: 990px){
    display: none;
  }
}

.template-index #header-main{
  margin-bottom: -1px;
}

#header_logo img {
  /* max-height: 40px; */
  padding-left: 20px;
}

#slideshow{
  float: right;
  width: calc(100% - 279px);
  float: right;
  margin-left: 0;
}


.fa-bell {
  margin-top: 13px;
  padding-left: 8px;
  color: #fb8800;
}
#apollo-top-menu {
  top: -115px;
}
#search_block_top {
  position: relative;
  top: -114px;
  float: none;
  display: flex;
  justify-content: center;
  margin-bottom: -90px;
}
#searchbox {
  margin-right: 0;
}
.content-header {
  position: relative;
  bottom: 23px;
  margin-top: -42px;
}
#iview .iviewSlider {
  /*left: 5%;*/
  -webkit-background-size: cover !important;
  background-size: cover !important;
}
.iviewSlider > div {
  margin-top: -2px;
}
.fix-margin-right {
  overflow: hidden;
  padding: 0;
}
