/* ============================================
  MEDIA QUERIES 
=========================================== */

@media (max-width: 1024px) {
  #iview .iviewSlider {
    left: -10%;
  }
  .fix-margin-right {
    overflow: inherit;
  }
}
@media (min-width: 992px) {
  .navbar-header {
    float: none;
  }
}
@media (min-width: 769px) {
  .search-mobile {
    display: none !important;
  }
}
@media (max-width: 768px) {
 
  .search-mobile {
    top: -79px !important;
    left: 39%;
    width: 50%;
  }
  #iview .iviewSlider {
    left: 0;
    background-size: cover !important;
  }
  .search-mobile {
    display: block;
  }
}
@media (max-width: 736px) {
  .content-header {
    float: left !important;
    bottom: 0;
    margin-top: -24px;
  }
  .search-desktop {
    display: none !important;
  }
  .search-mobile {
    top: -115px !important;
    left: 0;
    width: inherit;
  }
}



